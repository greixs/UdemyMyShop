@model IEnumerable<MyShop.Core.Models.Product>

@{
    ViewBag.Title = "Home Page";
}

<h1>Product</h1>

@foreach (var item in Model)
{
<div class="col-md-4" style="height:450px; margin:10px; padding:10px; border: solid thin">
    <div class="col-md-12">
        <img class="img-responsive" style="height:250px" src="~/Content/ProductImages/@item.Image" />
    </div>
    <div class="col-md-12">
        <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
    </div>
    <div class="col-md-12">
        <p>@item.Description</p>
    </div>
    <div class="col-md-12">
        <h4>@item.Price</h4>
    </div>
    <div class="col-md-12">
        <a href="#" class="btn btn-default">Add To BaskeT</a>
    </div>
</div>
}

<div class="col-md-12 clearfix"></div>